generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  profileImage String?
  corePrompt   String?
  interactions Interaction[]
}

// Interaction ka user id field , user table ke id se connected hai
model Interaction {
  id         String   @id @default(uuid())
  userPrompt String
  aiResponse String
  mood       String?
  action     String?
  createdAt  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}
